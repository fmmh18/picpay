{% extends 'template.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12 text-center"><h2>Consultar Usuário</h2></div>
            <div class="col-12">
                <hr>
                <p>
                    <a href="{{ baseURL }}" class="btn btn-secondary">Voltar</a>
                </p>
            </div>
            <div class="col-12">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <td><b>#</b></td>
                        <td><b>Nome</b></td>
                        <td><b>Usuário</b></td>
                        <td><b>E-mail</b></td>
                        <td><b>Razão Social</b></td>
                        <td><b>Nome Fantasia</b></td></tr>
                    </thead>
                    {% if dados is not empty %}
                        {% for dado in dados %}
                            <tr>
                                <td>{{ dado.id }}</td>
                                <td>{{ dado.nome }}</td>
                                <td>{{ dado.usuario }}</td>
                                <td>{{ dado.email }}</td>
                                <td>{{ dado.razaosocial }}</td>
                                <td>{{ dado.nomefantasia }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="6"><b class="text-center">Não encontrado!</b></td>
                        </tr>
                    {% endif %}
                </table>
            </div>

        </div>
    </div>
{% endblock %}